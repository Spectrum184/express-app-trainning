extends ../layouts/common.pug

block content
    h1 Login
    if errors
        each err in errors
            .alert.alert-danger= err
    form(method="POST", action="/auth/login")
        .form-group
            label(for="email") Name
            input#email.form-control(type="text", name="email", value=values? values.email:"")
        .form-group
            label(for="password") Name
            input#password.form-control(type="password", name="password",value=values? values.password:"")
        button.btn.btn-secondary Login