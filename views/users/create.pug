extends ../layouts/common.pug

block content
    h1 Create user
    if errors
        each err in errors
            .alert.alert-danger= err
    form(method="POST", action="/users/create", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone")
        .form-group
            label(for="avatar") Avartar
            input#avatar.form-control-file(type="file", name="avatar")
        button.btn.btn-secondary Create