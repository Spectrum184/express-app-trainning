extends ../layouts/common.pug

block content
    h1 Products
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href="cart/add/" + product.id) Add a cart
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            if page> 1
                li.page-item
                    a.page-link(href="/products/?page=" + (page - 1)) Previous
            li.page-item
                a.page-link(href="/products/?page=" + (page))
                    span=page
            li.page-item
                a.page-link(href="/products/?page=" + (page + 1)) 
                    span=page+1
            li.page-item
                a.page-link(href="/products/?page=" + (page + 2))
                    span= page+2 
            li.page-item
                a.page-link(href="/products/?page=" + (page + 1)) Next
        </ul>
    </nav>